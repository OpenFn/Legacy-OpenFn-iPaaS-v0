<% if @reviews.blank? %>
  <p>There are no reviews for this product currently in the system.</p>
<% else %>
  <p>These are the current reviews for this product in our system</p>
  <ul id="reviews">
  <% @reviews.each do |c| %>
    <li><strong>Review: </strong><%= c.review %>
    <br>
    <span><strong>Rating: </strong><%= c.rating %></span>
    </li>
  <% end %>
  </ul>
<% end %>

