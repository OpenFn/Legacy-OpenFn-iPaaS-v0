<%= form_tag :login, role: 'form' do |f| %>

  <div class="form-group">
    <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'Email', required: true %>
  </div>

  <div class="form-group">
    <%= password_field_tag :password, params[:password], class: 'form-control', placeholder: 'Password', required: true %>
  </div>

  <%= submit_tag "Login", class: 'btn btn-primary' %>
  <span class='text-danger'><%= flash[:alert] %></span>
<% end %>

