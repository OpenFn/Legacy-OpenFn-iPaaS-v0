<!-- <tr class="<% if mapping.active? %> success <% end %>"> -->
<tr>  
  <td><%=mapping.id %></td>
  <td>
    <%= link_to mapping, class: "btn btn-meh" do %><%=mapping.name %><% end %>
  </td>
  
  <td class="<% if mapping.enabled? %> success <% end %>">
    <% if mapping.enabled? %>
      <i class="fa fa-check-circle fa-lg"></i>
    <% else %>
      
    <% end %>
  </td>

  <td class="<% if mapping.active? %> success <% end %>">
    <% if mapping.active? %>
      <i class="fa fa-check-circle fa-lg"></i>
    <% else %>
      
    <% end %>
  </td>
  <td>
    <% if mapping.import %>
      <%= link_to [mapping, :submissions], class: 'btn btn-meh' do %>
        <i class="fa fa-history fa-lg"></i>
      <% end%>
    <% end%>
  </td>

  <td>
    <%= link_to mapping, method: 'delete', class: 'btn btn-meh', data: { confirm: 'Are you sure you want to delete this map?'} do %>
      <i class="fa fa-trash-o fa-lg"></i>
    <% end %>

  </td>
</tr>