<div class="ideas">

  <header class="header-image">
    <div class="headline">
      <h1><i class="fa fa-plug"></i>
   open<strong>Integrations</strong></h1>
      <h3>Your apps are <strong>better</strong> together.</h3>
      </div>
  </header>

  <div class="featurette mappings">
    <hr class="light">
    <hr class="dark">
    <br>
    
    <div class="container">
   
    <div class="row">

        <div class="col-md-2 text-center"><br>
          <%= button_to "Create new map", [:new, :odk_sf_legacy_mapping], class: 'btn btn-default' %>
        </div>
        <div class="col-md-2 text-center">
          <div class="content">
            Subscription Tier
          </div>
          <h4 class="title">
            Pilot A
          </h4>
          <div class="content">
            $ /mo.
          </div>
        </div>
        <div class="col-md-3 text-center">
          <div class="content">
            Maps
          </div><br>
          <div class="progress">
            <div class="progress-bar progress-bar-bolt"
              role="progressbar"
              aria-valuenow='<%= @mappings.where(active: true).count %>'
              aria-valuemin="0"
              aria-valuemax='<%= current_user.credits %>'
              style="width: '<%= current_user.credits > 0 ? 100*@mappings.where(active: true).count/current_user.credits : 0 %>'%; background: #5A6C77;">
              <span class='live'>
                <%= @mappings.where(active: true).count %> <i class="fa fa-bolt"></i>
              </span>
            </div>
            <div class="progress-bar progress-bar-grey"
              role="progressbar"
              aria-valuenow='<%= @mappings.where(enabled: true).count %>'
              aria-valuemin="0"
              aria-valuemax='<%= current_user.credits %>'
              style="width: <%= current_user.credits > 0 ? 100*(@mappings.where(enabled: true).count-@mappings.where(active:true).count)/current_user.credits : 0 %>%;">
              <span class='live'>
                <%= @mappings.where(enabled: true).count-@mappings.where(active:true).count %>
              </span>
            </div>
          </div>
          <div class="content">
            <span class="live"><%= @mappings.where(enabled: true).count %></span>/<span class='live'><%= current_user.credits %></span> maps in use
          </div>
        </div>
        <div class="col-md-4 text-center">
          <div class="content">
            Transactions
          </div><br>
          <div class="progress">
            <div class="progress-bar progress-bar-grey" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
              *uncapped*
            </div>
          </div>
          <div class="content">
            *uncapped*
          </div>
        </div>
