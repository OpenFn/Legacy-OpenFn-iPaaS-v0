<tr>
  <th><%= submission.uuid %></th>
  <th><%= submission.created_at %></th>
  <th><%= submission.state %></th>
  <th>
    <%= link_to "View", [ @mapping, submission], class: 'btn btn-primary' if submission.error? %>
  </th>
  <th>
    <%= link_to "Reprocess", [:reprocess, @mapping, submission], class: 'btn btn-danger', method: 'post', confirm: 'Are you sure?' if submission.error? %>
  </th>
</tr>
