<div class="modal fade" id="inviteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%=form_tag '/send_invite', method: :post, remote: true, role: 'form' do%>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Invite a colleague to help manage your mappings.</h4>
        </div>
        <div class="modal-body">
          <div class="error"></div>
          <div class="form-group">
            <%= label_tag :email %>
            <%= email_field_tag :email, nil, required: true, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success">Send Invite</button>
        </div>
      <%end%>
    </div>
  </div>
</div>